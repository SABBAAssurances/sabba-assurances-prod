{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend (Node.js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.js",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3001"
      },
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Frontend (React)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/node_modules/.bin/react-scripts",
      "args": ["start"],
      "cwd": "${workspaceFolder}/frontend",
      "env": {
        "REACT_APP_API_URL": "http://localhost:3001/api",
        "BROWSER": "none"
      },
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "ðŸš€ Full Stack Dev",
      "configurations": ["Backend (Node.js)", "Frontend (React)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "sabba-assurances",
        "order": 1
      }
    }
  ]
} 